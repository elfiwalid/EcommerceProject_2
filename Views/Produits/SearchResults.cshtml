@model IEnumerable<EcommerceProject.Models.Produit>

<h2>Search Results</h2>

@if (!Model.Any())
{
    <p>No results found for your search.</p>
}
else
{
    <div class="row">
        @foreach (var produit in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4">
                    <img src="@produit.ImageUrl" class="card-img-top" alt="@produit.Nom">
                    <div class="card-body">
                        <h5 class="card-title">@produit.Nom</h5>
                        <p class="card-text">@produit.Prix â‚¬</p>
                        <a href="/Produits/Details/@produit.Id" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
