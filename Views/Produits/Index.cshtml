}

.hero p {
    font-size: 1.5rem;
    margin-bottom: 30px;
    letter-spacing: 1px;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5); /* Adding shadow to make text stand out */
}

/* Button styles */
.hero .btn {
    padding: 12px 30px;
    font-size: 1.1rem;
    border-radius: 30px;
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
