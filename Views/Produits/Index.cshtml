@@keyframes fadeInUp {
    0% {
        opacity: 0;
        transform: translateY(20px);
    }
    100% {
        opacity: 1;
        transform: translateY(0);
    }
}

.animated.fadeInUp {
    animation: fadeInUp 1s ease-out;
}

/* Text styles */
.hero h1 {
    font-size: 3.5rem;
