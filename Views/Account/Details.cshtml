@model EcommerceProject.Models.Produit

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.Nom - DÃ©tails du Produit</title>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        :root {
            --primary: #2563eb;
            --primary-dark: #1d4ed8;
            --secondary: #64748b;
            --accent: #f97316;
            --background: #f8fafc;
            --surface: #ffffff;
            --text: #0f172a;
            --text-light: #64748b;
            --border: #e2e8f0;
            --shadow: 0 10px 30px -5px rgba(0, 0, 0, 0.1);
            --radius: 16px;
            --transition: all 0.3s ease;
        }

        body {
            font-family: 'Plus Jakarta Sans', sans-serif;
            background: var(--background);
            color: var(--text);
            line-height: 1.6;
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 2rem;
        }

        .product-container {
            display: grid;
            grid-template-columns: 1.2fr 1fr;
            gap: 3rem;
            background: var(--surface);
            border-radius: var(--radius);
            box-shadow: var(--shadow);
            overflow: hidden;
            position: relative;
        }

        /* Gallery Section */
        .gallery {
            padding: 2rem;
            background: var(--background);
            border-radius: var(--radius);
        }

        .main-image {
            position: relative;
            border-radius: var(--radius);
            overflow: hidden;
            aspect-ratio: 1;
            margin-bottom: 1.5rem;
        }

        .main-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: var(--transition);
        }

        .main-image:hover img {
            transform: scale(1.05);
        }

        .image-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 1rem;
        }

        .thumbnail {
            aspect-ratio: 1;
            border-radius: calc(var(--radius) / 2);
            overflow: hidden;
            cursor: pointer;
            position: relative;
        }

        .thumbnail img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: var(--transition);
        }

        .thumbnail::after {
            content: '';
            position: absolute;
            inset: 0;
            background: rgba(0, 0, 0, 0.1);
            opacity: 0;
            transition: var(--transition);
        }

        .thumbnail:hover::after {
            opacity: 1;
        }

        .thumbnail.active {
            box-shadow: 0 0 0 3px var(--primary);
        }

        /* Product Info */
        .product-info {
            padding: 3rem 2rem;
            display: flex;
            flex-direction: column;
        }

        .category {
            color: var(--primary);
            font-weight: 600;
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            margin-bottom: 1rem;
        }

        .product-title {
            font-size: 2.5rem;
            font-weight: 700;
            line-height: 1.2;
            margin-bottom: 1.5rem;
            color: var(--text);
        }

        .price-container {
            display: flex;
            align-items: center;
            gap: 1rem;
            margin-bottom: 2rem;
        }

        .current-price {
            font-size: 2rem;
            font-weight: 700;
            color: var(--text);
        }

        .original-price {
            font-size: 1.2rem;
            color: var(--text-light);
            text-decoration: line-through;
        }

        .discount-badge {
            background: var(--accent);
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 2rem;
            font-weight: 600;
            font-size: 0.9rem;
        }

        .description {
            color: var(--text-light);
            margin-bottom: 2rem;
            font-size: 1.1rem;
            line-height: 1.8;
        }

        /* Features */
        .features {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 1.5rem;
            margin-bottom: 2rem;
        }

        .feature {
            display: flex;
            align-items: center;
            gap: 1rem;
            padding: 1rem;
            background: var(--background);
            border-radius: calc(var(--radius) / 2);
            transition: var(--transition);
        }

        .feature:hover {
            transform: translateY(-2px);
            box-shadow: var(--shadow);
        }

        .feature i {
            font-size: 1.5rem;
            color: var(--primary);
        }

        .feature-text {
            font-weight: 500;
        }

        /* Options */
        .options {
            margin-bottom: 2rem;
        }

        .option-title {
            font-weight: 600;
            margin-bottom: 1rem;
        }

        .color-options {
            display: flex;
            gap: 1rem;
        }

        .color-option {
            width: 2.5rem;
            height: 2.5rem;
            border-radius: 50%;
            cursor: pointer;
            position: relative;
            transition: var(--transition);
        }

        .color-option:hover {
            transform: scale(1.1);
        }

        .color-option.active::after {
            content: '';
            position: absolute;
            inset: -4px;
            border: 2px solid currentColor;
            border-radius: 50%;
        }

        /* Add to Cart Section */
        .add-to-cart-section {
            margin-top: auto;
            display: flex;
            gap: 1rem;
        }

        .quantity {
            display: flex;
            align-items: center;
            background: var(--background);
            border-radius: 2rem;
            padding: 0.5rem;
        }

        .quantity button {
            width: 2.5rem;
            height: 2.5rem;
            border: none;
            background: var(--surface);
            border-radius: 50%;
            cursor: pointer;
            font-size: 1.2rem;
            color: var(--text);
            transition: var(--transition);
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .quantity button:hover {
            background: var(--primary);
            color: white;
        }

        .quantity span {
            width: 3rem;
            text-align: center;
            font-weight: 600;
        }

        .add-to-cart {
            flex: 1;
            padding: 1rem 2rem;
            border: none;
            background: var(--primary);
            color: white;
            border-radius: 2rem;
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            transition: var(--transition);
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
        }

        .add-to-cart:hover {
            background: var(--primary-dark);
            transform: translateY(-2px);
        }

        .wishlist {
            width: 3.5rem;
            height: 3.5rem;
            border: none;
            background: var(--background);
            border-radius: 50%;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            color: var(--accent);
            transition: var(--transition);
        }

        .wishlist:hover {
            background: var(--accent);
            color: white;
            transform: translateY(-2px);
        }

        /* Tabs Section */
        .tabs-section {
            margin-top: 3rem;
            background: var(--surface);
            border-radius: var(--radius);
            box-shadow: var(--shadow);
            padding: 2rem;
        }

        .tabs-header {
            display: flex;
            gap: 2rem;
            border-bottom: 2px solid var(--border);
            margin-bottom: 2rem;
        }

        .tab {
            padding: 1rem 0;
            font-weight: 600;
            color: var(--text-light);
            cursor: pointer;
            position: relative;
            transition: var(--transition);
        }

        .tab:hover {
            color: var(--primary);
        }

        .tab.active {
            color: var(--primary);
        }

        .tab.active::after {
            content: '';
            position: absolute;
            bottom: -2px;
            left: 0;
            right: 0;
            height: 2px;
            background: var(--primary);
        }

        .tab-content {
            display: none;
        }

        .tab-content.active {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 2rem;
        }

        .spec-item {
            display: flex;
            gap: 1rem;
            padding: 1.5rem;
            background: var(--background);
            border-radius: calc(var(--radius) / 2);
            transition: var(--transition);
        }

        .spec-item:hover {
            transform: translateY(-2px);
            box-shadow: var(--shadow);
        }

        .spec-icon {
            font-size: 1.5rem;
            color: var(--primary);
        }

        .spec-details h4 {
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        .spec-details p {
            color: var(--text-light);
            font-size: 0.9rem;
        }

        /* Responsive Design */
        @@media (max-width: 1200px) {
            .product-container {
                grid-template-columns: 1fr;
            }

            .product-info {
                padding: 2rem;
            }
        }

        @@media (max-width: 768px) {
            .container {
                padding: 1rem;
            }

            .features {
                grid-template-columns: 1fr;
            }

            .add-to-cart-section {
                flex-direction: column;
            }

            .quantity {
                width: 100%;
                justify-content: center;
            }

            .tab-content.active {
                grid-template-columns: 1fr;
            }
        }

        /* Animations */
        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .animate {
            animation: fadeIn 0.6s ease forwards;
        }

        /* Loading States */
        .skeleton {
            background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
            background-size: 200% 100%;
            animation: loading 1.5s infinite;
        }

        @@keyframes loading {
            0% {
                background-position: 200% 0;
            }
            100% {
                background-position: -200% 0;
            }
        }
    </style>
</head>
<body>
